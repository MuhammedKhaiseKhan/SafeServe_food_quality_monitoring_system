generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Emulate Enums with Strings
// Role: 'ADMIN', 'MANAGER', 'INSPECTOR'
// ReportStatus: 'PENDING', 'APPROVED', 'REJECTED'

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("INSPECTOR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reports        InspectionReport[]
  auditLogs      AuditLog[]
}

model InspectionForm {
  id        Int      @id @default(autoincrement())
  title     String
  structure String   // JSON String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reports InspectionReport[]
}

model InspectionReport {
  id          Int          @id @default(autoincrement())
  inspectorId Int
  formId      Int
  data        String       // JSON String
  status      String       @default("PENDING")
  aiSummary   String?      
  score       Int?         
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  inspector User           @relation(fields: [inspectorId], references: [id])
  form      InspectionForm @relation(fields: [formId], references: [id])
}

model Guideline {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   
  category  String   @default("General") // e.g., 'Food Storage', 'Hygiene'
  severity  String   @default("Minor")   // 'Minor', 'Major', 'Critical'
  roleTarget String?   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  details   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
